{
  "name": "myflix-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/presentation/http/server.ts --persist-to=.wrangler",
    "dev:local": "npm run d1:init:local && wrangler dev src/presentation/http/server.ts --env local --persist-to=.wrangler/state --local --log-level=debug",
    "build": "wrangler deploy --dry-run --outdir ./dist",
    "deploy": "wrangler deploy",
    "d1:init:local": "wrangler d1 migrations apply myflix-local-db --local --env local --persist-to .wrangler/state",
    "d1:reset:local": "rm -rf .wrangler/state && npm run d1:init:local",
    "migrate:local": "wrangler d1 migrations apply myflix-dev-db --local",
    "migrate:dev": "wrangler d1 migrations apply myflix-dev-db --env dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint",
    "format": "biome format --write"
  },
  "dependencies": {
    "hono": "^4.10.6",
    "jose": "^6.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@biomejs/biome": "^2.3.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "wrangler": "^4.50.0"
  }
}
